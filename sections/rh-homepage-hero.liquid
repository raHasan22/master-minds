{% schema %}
  {
    "name": "Dynamic Design Section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Shape your future in digital design and creative coding."
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Section Description",
        "default": "Our latest report explores developments in generative industrial AI and how key trends like Agentic AI and Foundational Models will shape industrial applications in the coming years."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Learn More"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Hero Image",
        "info": "Required: Please upload the hero image for this section"
      },
      {
        "type": "header",
        "content": "Spacing Settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Top Padding (px)",
        "min": 0,
        "max": 300,
        "step": 10,
        "default": 200
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Bottom Padding (px)",
        "min": 0,
        "max": 300,
        "step": 10,
        "default": 200
      },
      {
        "type": "header",
        "content": "Title Font Size Settings"
      },
      {
        "type": "range",
        "id": "title_font_size_desktop",
        "label": "Title Font Size - Desktop (px)",
        "min": 16,
        "max": 80,
        "step": 2,
        "default": 40
      },
      {
        "type": "range",
        "id": "title_font_size_tablet",
        "label": "Title Font Size - Tablet (px)",
        "min": 14,
        "max": 60,
        "step": 2,
        "default": 30
      },
      {
        "type": "range",
        "id": "title_font_size_mobile",
        "label": "Title Font Size - Mobile (px)",
        "min": 12,
        "max": 40,
        "step": 2,
        "default": 24
      }
    ],
    "presets": [
      {
        "name": "RH Dynamic Design Section",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

{% style %}
  /* Hero section  */
  .rh-masterminds-hero-sec {
    padding: {{ section.settings.padding_top }}
    px 20px{{ section.settings.padding_bottom }}
    px 20px;
    background: #000028;
  }
  .rh-masterminds-hero-sec .container-rh {
    max-width: 1278px;
    width: 100%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 37px;
  }
  .rh-masterminds-hero-sec .container-rh .text-part {
    width: 60%;
  }
  .rh-masterminds-hero-sec .container-rh .text-part {
    display: flex;
    flex-direction: column;
    gap: 35px;
  }
  .rh-masterminds-hero-sec .container-rh .text-part .sec-title {
    font-family: 'Siemens Sans';
    font-weight: 700;
    font-size: {{ section.settings.title_font_size_desktop }}px;
    line-height: 130%;
    letter-spacing: normal;
    color: #ffffff;
    margin: 0;
  }
  .rh-masterminds-hero-sec .container-rh .text-part .sec-des {
    font-family: 'Siemens Sans';
    font-weight: 400;
    font-size: 18px;
    line-height: 28px;
    letter-spacing: normal;
    color: #ffffff;
    margin: 0;
  }
  .rh-masterminds-hero-sec .container-rh .image-part {
    width: 40%;
  }
  .rh-masterminds-hero-sec .container-rh .image-part img {
    width: 100%;
  }
  @media (max-width: 1024px) {
    .rh-masterminds-hero-sec {
      padding: {{ section.settings.padding_top | divided_by: 2.5 }}
      px 20px{{ section.settings.padding_bottom | divided_by: 2.5 }}
      px 20px;
      background: #000028;
    }
    .rh-masterminds-hero-sec .container-rh {
      gap: 30px;
    }
    .rh-masterminds-hero-sec .container-rh .text-part {
      width: 55%;
      gap: 20px;
    }
    .rh-masterminds-hero-sec .container-rh .image-part {
      width: 45%;
    }
    .rh-masterminds-hero-sec .container-rh .text-part .sec-title {
      font-size: {{ section.settings.title_font_size_tablet }}px;
    }
    .rh-masterminds-hero-sec .container-rh .text-part .sec-des {
      font-size: 14px;
    }
  }
  @media (max-width: 767px) {
    .rh-masterminds-hero-sec {
      padding: {{ section.settings.padding_top | divided_by: 3 }}
      px 20px{{ section.settings.padding_bottom | divided_by: 3 }}
      px 20px;
    }
    .rh-masterminds-hero-sec .container-rh {
      flex-direction: column-reverse;
    }
    .rh-masterminds-hero-sec .container-rh .text-part {
      width: 100%;
      gap: 20px;
      align-items: center;
    }
    .rh-masterminds-hero-sec .container-rh .image-part {
      width: 100%;
    }
    .rh-masterminds-hero-sec .container-rh .text-part .sec-title {
      text-align: center;
      font-size: {{ section.settings.title_font_size_mobile }}px;
    }
    .rh-masterminds-hero-sec .container-rh .text-part .sec-des {
      text-align: center;
    }
  }
{% endstyle %}

<section class="rh-masterminds-hero-sec">
  <div class="container-rh">
    <div class="text-part">
      {% if section.settings.title != blank %}
        <h2 class="sec-title">
          {{ section.settings.title }}
        </h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="sec-des">
          {{ section.settings.description }}
        </p>
      {% endif %}
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="primary-button-master-minds">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
    <div class="image-part">
      <img
        src="{{ section.settings.image | img_url: '800x' }}"
        alt="{{ section.settings.image.alt | escape }}"
        width="auto"
        height="auto"
        loading="lazy">
    </div>
  </div>
</section>