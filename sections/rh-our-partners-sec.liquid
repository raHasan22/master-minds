{% schema %}
{
  "name": "Our Partners",
  "max_blocks": 20,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Unlock Your Team's Potential with 2000+ Accredited Courses!"
    }
  ],
  "blocks": [
    {
      "type": "partner_logo",
      "name": "Partner Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Company Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "RH Our Partners",
      "category": "Custom",
      "blocks": [
        {
          "type": "partner_logo"
        },
        {
          "type": "partner_logo"
        },
        {
          "type": "partner_logo"
        },
        {
          "type": "partner_logo"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="rh-masterminds-our-partners">
  <div class="container-rh">
    <div class="text-part">
      <h6>
        {{ section.settings.heading | default: "Unlock Your Team's Potential with 2000+ Accredited Courses!" }}
      </h6>
    </div>
    <div class="image-part">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | img_url: 'medium' }}"
            width="auto"
            height="auto"
            alt="{{ block.settings.image.alt | escape }}"
          >
        {% else %}
          <img
            src="https://dummyimage.com/200x100/5e5e5e/ffffff&text=Company+Logo"
            alt="Company logo"
            width="200"
            height="100"
          >
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .rh-masterminds-our-partners {
    background: #0d0d33;
    padding: 33px 20px;
  }
  .rh-masterminds-our-partners .container-rh {
    max-width: 1278px;
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 20px;
  }
  .rh-masterminds-our-partners .container-rh .text-part {
    width: 24%;
  }
  .rh-masterminds-our-partners .container-rh .text-part h6 {
    font-family: 'Siemens Sans', sans-serif;
    font-weight: 400;
    font-size: 18px;
    line-height: 28px;
    letter-spacing: normal;
    color: #ffffff;
    margin: 0;
  }
  .rh-masterminds-our-partners .container-rh .image-part {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 22px;
    width: 76%;
  }
  .rh-masterminds-our-partners .container-rh .image-part img {
    width: 10.3%;
  }
  @media (max-width: 991px) {
    .rh-masterminds-our-partners .container-rh {
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .rh-masterminds-our-partners .container-rh .text-part {
      width: 100%;
    }
    .rh-masterminds-our-partners .container-rh .text-part h6 {
      text-align: center;
    }
    .rh-masterminds-our-partners .container-rh .image-part {
      justify-content: center;
      width: 100%;
    }
    .rh-masterminds-our-partners .container-rh .image-part img {
      width: 9.8%;
    }
  }
  @media (max-width: 767px) {
    .rh-masterminds-our-partners .container-rh .text-part h6 {
      font-size: 16px;
    }
    .rh-masterminds-our-partners .container-rh .image-part {
      gap: 15px;
    }
    .rh-masterminds-our-partners .container-rh .image-part img {
      width: 15%;
    }
  }
</style>
