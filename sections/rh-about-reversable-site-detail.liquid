{% schema %}
{
  "name": "Reversable Site Detail",
  "tag": "section",
  "class": "rh-reversable-site-detail",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Who are the Mastermind jury?"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "A panel of expert digital creatives, made up of designers, developers, and agencies from all over the world who have demonstrated their talent and experience in the field of digital design. Their role is to assess and carefully score the web projects that are submitted to Masterminds on a daily basis."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "More Info"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "select",
      "id": "flex_direction",
      "label": "Layout Direction",
      "options": [
        {
          "value": "row",
          "label": "Image Left, Content Right"
        },
        {
          "value": "row-reverse",
          "label": "Content Left, Image Right"
        }
      ],
      "default": "row"
    },
    {
      "type": "header",
      "content": "Spacing Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 50
    },
    {
      "type": "range",
      "id": "gap_between_elements",
      "label": "Gap Between Elements (px)",
      "min": 20,
      "max": 100,
      "step": 10,
      "default": 60
    },
    {
      "type": "header",
      "content": "Typography Settings"
    },
    {
      "type": "range",
      "id": "title_font_size_desktop",
      "label": "Title Font Size - Desktop (px)",
      "min": 20,
      "max": 60,
      "step": 2,
      "default": 40
    },
    {
      "type": "range",
      "id": "title_font_size_tablet",
      "label": "Title Font Size - Tablet (px)",
      "min": 18,
      "max": 48,
      "step": 2,
      "default": 32
    },
    {
      "type": "range",
      "id": "title_font_size_mobile",
      "label": "Title Font Size - Mobile (px)",
      "min": 16,
      "max": 40,
      "step": 2,
      "default": 28
    },
    {
      "type": "range",
      "id": "description_font_size_desktop",
      "label": "Description Font Size - Desktop (px)",
      "min": 14,
      "max": 24,
      "step": 2,
      "default": 18
    },
    {
      "type": "range",
      "id": "description_font_size_tablet",
      "label": "Description Font Size - Tablet (px)",
      "min": 12,
      "max": 20,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "description_font_size_mobile",
      "label": "Description Font Size - Mobile (px)",
      "min": 10,
      "max": 18,
      "step": 2,
      "default": 15
    }
  ],
  "presets": [
    {
      "name": "Reversable Site Detail",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
    #reversable-section-{{ section.id }} {
        background: #000028;
        padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
    }

    #reversable-section-{{ section.id }} .container_rh{
        max-width: 1284px;
        margin: 0 auto;
    }

    /* Reversable content layout */
    #reversable-section-{{ section.id }} .reversable-wrapper__rh {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        gap: {{ section.settings.gap_between_elements }}px;
        flex-wrap: wrap;
        flex-direction: {{ section.settings.flex_direction }};
    }

    /* Reversable image wrapper */
    #reversable-section-{{ section.id }} .reversable-image-wrapper__rh {
        flex: 1;
    }

    /* Reversable image */
    #reversable-section-{{ section.id }} .reversable-image__rh {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    /* Reversable content column */
    #reversable-section-{{ section.id }} .reversable-content__rh {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: {{ section.settings.gap_between_elements }}px;
    }

    /* Reversable text container */
    #reversable-section-{{ section.id }} .reversable-text-container__rh {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 32px;
        width: 100%;
    }

    /* Reversable title */
    #reversable-section-{{ section.id }} .reversable-title__rh {
        color: white;
        font-size: {{ section.settings.title_font_size_desktop }}px;
        font-family: 'Siemens Sans', Arial, sans-serif;
        font-weight: 700;
        line-height: 1.3;
        word-wrap: break-word;
    }

    /* Reversable description */
    #reversable-section-{{ section.id }} .reversable-description__rh {
        color: white;
        font-size: {{ section.settings.description_font_size_desktop }}px;
        font-family: 'Siemens Sans', Arial, sans-serif;
        font-weight: 400;
        line-height: 1.56;
        word-wrap: break-word;
        width: 100%;
    }

/* Responsive design for reversable section */
@media (max-width: 768px) {
    #reversable-section-{{ section.id }} {
        padding: 30px 15px;
    }
    
    #reversable-section-{{ section.id }} .reversable-wrapper__rh {
        gap: 30px;
        flex-direction: column;
    }
    
    #reversable-section-{{ section.id }} .reversable-image-wrapper__rh,
    #reversable-section-{{ section.id }} .reversable-content__rh {
        min-width: 100%;
        max-width: 100%;
    }
    
    #reversable-section-{{ section.id }} .reversable-content__rh {
        gap: 40px;
    }
    
    #reversable-section-{{ section.id }} .reversable-title__rh {
        font-size: {{ section.settings.title_font_size_tablet }}px;
        line-height: 1.31;
    }
    
    #reversable-section-{{ section.id }} .reversable-description__rh {
        font-size: {{ section.settings.description_font_size_tablet }}px;
        line-height: 1.5;
    }
}

@media (max-width: 480px) {
    #reversable-section-{{ section.id }} {
        padding: 20px 10px;
    }
    
    #reversable-section-{{ section.id }} .reversable-wrapper__rh {
        gap: 20px;
    }
    
    #reversable-section-{{ section.id }} .reversable-content__rh {
        gap: 30px;
    }
    
    #reversable-section-{{ section.id }} .reversable-title__rh {
        font-size: {{ section.settings.title_font_size_mobile }}px;
        line-height: 1.29;
    }
    
    #reversable-section-{{ section.id }} .reversable-description__rh {
        font-size: {{ section.settings.description_font_size_mobile }}px;
        line-height: 1.47;
    }
}

{% endstyle %}



<div id="reversable-section-{{ section.id }}">
  <div class="container_rh">
    <div class="reversable-wrapper__rh">
            {% if section.settings.image != blank %}
                <div class="reversable-image-wrapper__rh">
                    <img 
                        class="reversable-image__rh" 
                        src="{{ section.settings.image | img_url: '800x' }}" 
                        alt="{{ section.settings.image.alt | escape }}"
                        width="auto"
                        height="auto"
                        loading="lazy"
                    />
                </div>
            {% endif %}
            <div class="reversable-content__rh">
                {% if section.settings.title != blank or section.settings.description != blank %}
                    <div class="reversable-text-container__rh">
                        {% if section.settings.title != blank %}
                            <div class="reversable-title__rh">{{ section.settings.title }}</div>
                        {% endif %}
                        {% if section.settings.description != blank %}
                            <div class="reversable-description__rh">{{ section.settings.description }}</div>
                        {% endif %}
                    </div>
                {% endif %}
                {% if section.settings.button_text != blank and section.settings.button_link != blank %}
                    <a href="{{ section.settings.button_link }}" class="primary-button-master-minds">
                        {{ section.settings.button_text }}
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
