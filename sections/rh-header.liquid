{% style %}
  .mm-header {
    background: #000028;
    overflow: hidden;
    padding: 20px;
    width: 100%;
  }

  .mm-header__container {
    max-width: 1286px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
  }

  .mm-header__left {
    display: flex;
    align-items: center;
    gap: 70px;
  }

  .mm-header__logo {
    color: white;
    font-size: 24px;
    font-family: 'Siemens Sans';
    font-weight: 700;
    line-height: 31.20px;
    text-decoration: none;
  }

  .mm-header__menu {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .mm-header__menu-link {
    color: white;
    font-size: 18px;
    font-family: 'Siemens Sans';
    font-weight: 400;
    line-height: 28px;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .mm-header__menu-link:hover {
    opacity: 0.8;
  }

  .mm-header__right {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .mm-header__search {
    position: relative;
    width: 302px;
  }

  .mm-header__search-input {
    width: 100%;
    height: 46px;
    background: rgba(0, 230, 220, 0.12);
    border: none;
    border-bottom: 1px solid #B3B3BE;
    color: white;
    font-size: 18px;
    font-family: 'Siemens Sans';
    padding: 9px 50px 9px 16px;
  }

  .mm-header__search-input::placeholder {
    color: white;
    opacity: 0.7;
  }

  .mm-header__search-button {
    position: absolute;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mm-header__search-icon {
    width: 24px;
    height: 24px;
    display: flex;
  }

  .mm-header__search-icon svg {
    width: 100%;
    height: 100%;
    stroke: white;
  }

  .mm-header__signup {
    color: white;
    font-size: 18px;
    font-family: 'Siemens Sans';
    font-weight: 400;
    line-height: 28px;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .mm-header__signup:hover {
    opacity: 0.8;
  }

  .mm-header__login {
    display: flex;
    align-items: center;
    gap: 8px;
    background: #00CCCC;
    padding: 9px 24px;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .mm-header__login:hover {
    background-color: #00b3b3;
  }

  .mm-header__login-text {
    color: #000028;
    font-size: 18px;
    font-family: 'Siemens Sans';
    font-weight: 700;
    line-height: 28px;
  }

  .mm-header__login-icon {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mm-header__login-icon svg {
    width: 100%;
    height: 100%;
    stroke: #000028;
  }

  .mm-header__mobile-menu {
    display: none;
    background: transparent;
    border: none;
    padding: 0;
    width: 24px;
    height: 24px;
    cursor: pointer;
  }

  .mm-header__mobile-menu svg {
    width: 100%;
    height: 100%;
    stroke: white;
  }

  .mm-header__mobile-nav {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #000028;
    z-index: 1000;
    padding: 80px 20px 20px;
  }

  .mm-header__mobile-nav.is-active {
    display: block;
  }

  .mm-header__mobile-nav-links {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 40px;
  }

  .mm-header__mobile-nav-link {
    color: white;
    font-size: 24px;
    font-family: 'Siemens Sans';
    font-weight: 400;
    line-height: 1.4;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .mm-header__mobile-nav-link:hover {
    opacity: 0.8;
  }

  .mm-header__mobile-close {
    position: absolute;
    top: 20px;
    right: 20px;
    background: transparent;
    border: none;
    padding: 0;
    width: 24px;
    height: 24px;
    cursor: pointer;
  }

  .mm-header__mobile-close svg {
    width: 100%;
    height: 100%;
    stroke: white;
  }

  @media screen and (max-width: 1280px) {
    .mm-header__container {
      padding: 0 15px;
    }

    .mm-header__left {
      gap: 40px;
    }

    .mm-header__search {
      width: 250px;
    }
  }

  @media screen and (max-width: 991px) {
    .mm-header__left {
      gap: 30px;
    }

    .mm-header__search {
      width: 200px;
    }
  }

  @media screen and (max-width: 768px) {
    .mm-header {
      padding: 15px;
    }

    .mm-header__menu {
      display: none;
    }

    .mm-header__search {
      display: none;
    }

    .mm-header__mobile-menu {
      display: block;
    }

    .mm-header__right {
      gap: 15px;
    }

    .mm-header__login {
      padding: 8px 16px;
    }

    .mm-header {
      position: relative;
      z-index: 1001;
    }
  }

  @media screen and (max-width: 480px) {
    .mm-header__logo {
      font-size: 20px;
    }

    .mm-header__signup {
      display: none;
    }
  }
{% endstyle %}

<header class="mm-header">
  <div class="mm-header__container">
    <div class="mm-header__left">
      <a href="{{ routes.root_url }}" class="mm-header__logo">
        {%- if section.settings.logo != blank -%}
          {{ section.settings.logo | image_url: width: 200 | image_tag: loading: 'lazy', class: 'mm-header__logo-image' }}
        {%- else -%}
          {{ shop.name }}
        {%- endif -%}
      </a>
      <nav class="mm-header__menu">
        {%- for link in section.settings.menu.links -%}
          <a href="{{ link.url }}" class="mm-header__menu-link">{{ link.title }}</a>
        {%- endfor -%}
      </nav>
    </div>
    <div class="mm-header__right">
      <form
        action="{{ routes.search_url }}"
        method="get"
        class="mm-header__search">
        <input
          type="search"
          name="q"
          class="mm-header__search-input"
          value="{{ search.terms | escape }}"
          placeholder="{{ 'general.search.search' | t }}"
          role="combobox">
        <button type="submit" class="mm-header__search-button">
          <span class="mm-header__search-icon">{% render 'icon-search' %}</span>
        </button>
      </form>
      {%- if shop.customer_accounts_enabled -%}
        <a href="{{ routes.account_register_url }}" class="mm-header__signup">{{ 'customer.register.title' | t }}</a>
        <a href="{{ routes.account_login_url }}" class="mm-header__login">
          <span class="mm-header__login-text">{{ 'customer.login_page.title' | t }}</span>
          <span class="mm-header__login-icon">{% render 'icon-user' %}</span>
        </a>
      {%- endif -%}
      <button
        type="button"
        class="mm-header__mobile-menu js-mobile-menu-toggle"
        aria-label="Toggle Menu">
        {% render 'icon-menu' %}
      </button>
    </div>
  </div>
</header>

<div class="mm-header__mobile-nav js-mobile-nav">
  <button
    type="button"
    class="mm-header__mobile-close js-mobile-menu-toggle"
    aria-label="Close Menu">
    {% render 'icon-close' %}
  </button>
  <nav class="mm-header__mobile-nav-links">
    <a href="{{ routes.root_url }}" class="mm-header__mobile-nav-link">Home</a>
    {%- for link in section.settings.menu.links -%}
      <a href="{{ link.url }}" class="mm-header__mobile-nav-link">{{ link.title }}</a>
    {%- endfor -%}
  </nav>
  {%- if shop.customer_accounts_enabled -%}
    <div class="mm-header__mobile-nav-links">
      <a href="{{ routes.account_register_url }}" class="mm-header__mobile-nav-link">{{ 'customer.register.title' | t }}</a>
      <a href="{{ routes.account_login_url }}" class="mm-header__mobile-nav-link">{{ 'customer.login_page.title' | t }}</a>
    </div>
  {%- endif -%}
</div>

<script>
  class MobileMenu {
    constructor() {
      this.mobileNav = document.querySelector('.js-mobile-nav');
      this.toggleButtons = document.querySelectorAll('.js-mobile-menu-toggle');
      this.isOpen = false;
      
      this.init();
    }
  
    init() {
      this.toggleButtons.forEach(button => {
        button.addEventListener('click', () => this.toggleMenu());
      });
    }
  
    toggleMenu() {
      this.isOpen = !this.isOpen;
      this.mobileNav.classList.toggle('is-active');
      document.body.style.overflow = this.isOpen ? 'hidden' : '';
    }
  }
  
  // Initialize mobile menu
  window.addEventListener('DOMContentLoaded', () => {
    new MobileMenu();
  });
</script>

